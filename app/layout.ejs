          <%- include('./component_ejs/cart.ejs') %>
        <%- contents %>
        <div class="footer">
          <!--猜你也喜歡-->
          <div class="container-md <%- display %>">
              <div class="row">
                <div class="h1 fw-bold col-9 pb-11 pt-0 col-sm-6 pt-md-15 col-md-4" data-aos="fade-up">
