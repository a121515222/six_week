                </div>
            </div>
            <!--swiper-->
            <%- include('./component_ejs/swiper.ejs') %>
          </div>
          <!--想收到最新消息嗎?-->
          <div class="footer_banner d-flex flex-column justify-content-end <%- display %>" data-aos="fade-up" style="background: url(./assets/images/footer_banner.jpg) center;background-size: cover;">
